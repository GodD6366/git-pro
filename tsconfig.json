{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es6" // Or "es2015" or "es6" should work as well
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "lib"
    },
    "declaration": true,
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}